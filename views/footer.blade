script(type="text/javascript" src="js/vendor/css3-multi-column.js")
script(type="text/javascript" src="js/footer.js")
- function sortByKey(key)
    - return function(a,b)
        - if (a[key] < b[key]) return -1
        - if (a[key] > b[key]) return 1
        - return 0
- var chapters = locals.settings.chapters.rows
    - var countries = [];
    - for(var i in chapters)
        - var row = chapters[i]
        - if (row[0] == 'Country')
            - countries.push({link:row[2],contact:row[3],country:row[4]})
- countries.sort(sortByKey('country'))
- var guide = locals.settings.translation.guide
footer
    ul#footer.fullwidth
        li#footer_home
            a(href="/")
                img(src="/images/phx-logo-30x34.png" alt="Home")
        li
            a.dropup(href="#" data-i18n="footer.network")=i18n.t("footer.network")
            #tzm-network-popup.footer_dropup.drop12columns
                .col_8
                    h5(data-i18n="footer.chapters")=i18n.t("footer.chapters")
                .col_4
                    h5(data-i18n="footer.official_sites.official_sites")=i18n.t("footer.official_sites.official_sites")
                // we load the chapters.json file
                .col_8.tzmlist
                    p.invisible fixme!!!
                    ol#chapters-links
                        - for(var i in countries)
                            - var o = countries[i]
                            li
                                - var countryClass = "chapters c_"+o.country.toLowerCase()
                                    a(href=o.link title=o.country class=""+countryClass tabindex="-1")
                                        span.flag-margin=o.country
                .col_4
                    p.note
                        a(href="http://www.thezeitgeistmovement.com/" target="_blank")= t("footer.official_sites.tzm_global")
                    p.note
                        a(href="http://zeitgeistmediaproject.com/" target="_blank")= t("footer.official_sites.zeitgeist_media_project")
                    p.note
                        a(href="http://www.blogtalkradio.com/zmglobal" target="_blank")=t("footer.official_sites.tzm_global_radio")
                    p.note
                        a(href="http://www.zeitnews.org/" target="_blank")=t("footer.official_sites.zeitnews")
                    p.note
                        a(href="http://blog.thezeitgeistmovement.com/" target="_blank")=t("footer.official_sites.blog")
                    p.note
                        a(href="http://www.zbnlive.com/" target="_blank")=t("footer.official_sites.zeitgeist_brodcasting_network")
                    p.note
                        a(href="http://www.blogtalkradio.com/v-radio" target="_blank")=t("footer.official_sites.v_radio")
    // Trigger Button
    a#footer_trigger.trigger_active(href="#")
